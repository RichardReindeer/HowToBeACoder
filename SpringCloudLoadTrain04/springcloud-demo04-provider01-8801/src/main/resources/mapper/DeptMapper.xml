<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bambi.springcloud.demo04.provider.mapper.DeptMapper">
    <select id="getDeptById" resultType="com.bambi.springcloud.api.vo.Dept">
        select * from dept where dept_no =#{deptNo};
    </select>

    <select id="getList" resultType="com.bambi.springcloud.api.vo.Dept">
        select * from dept;
    </select>

    <insert id="add" parameterType="com.bambi.springcloud.api.vo.Dept">
        insert into dept (dept_name,db_source) value (#{deptName},DATABASE());
    </insert>
</mapper>