<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bambi.springboot.shiro.demo05.mapper.UserMapper">
    <select id="selectUserByUsername" resultType="UserVo" parameterType="java.lang.String">
        select * from user where username = #{username};
    </select>
</mapper>