<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bambi.springcloud.demo01.provider01.mapper.DeptMapper">
    <select id="getDeptById" resultType="com.bambi.springcloud.demo01.api.vo.Dept" parameterType="Long">
        select * from dept where dept_no = #{deptId};
    </select>
    <select id="getAll" resultType="com.bambi.springcloud.demo01.api.vo.Dept">
        select * from dept;
    </select>

    <insert id="add" parameterType="com.bambi.springcloud.demo01.api.vo.Dept">
        insert into dept (dept_Name,db_Source) value (#{deptName},DATASOURCE());
    </insert>
</mapper>